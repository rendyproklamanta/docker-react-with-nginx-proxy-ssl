before_script:
  - apt-get update -qq
  - apt-get install -qq git
  - "which ssh-agent || ( apt-get install -qq openssh-client )"
  - eval $(ssh-agent -s)
  - ssh-add <(echo "$SSH_PRIVATE_KEY")
  - mkdir -p ~/.ssh
  - '[[ -f /.dockerenv ]] && echo -e "Host *\n\tStrictHostKeyChecking no\n\n" > ~/.ssh/config'

deploy_staging:
  stage: deploy
  environment:
    name: staging
  script:
    - |
      if [[ "$CI_COMMIT_BRANCH" == "main" ]]; then
        ssh $SSH_USER@$VM_IPADDRESS "cd /home/domain.com && git pull origin main && cd /home/domain.com/deploy && chmod +x production.sh && ./production.sh  && chmod -x production.sh"
      else
        ssh $SSH_USER_DEV@$VM_IPADDRESS_DEV "cd /home/domain.com/dev && git pull origin dev && cd /home/domain.com/dev/deploy && chmod +x development.sh && ./development.sh  && chmod -x development.sh"
      fi
  only:
    - main # Execute CI/CD pipeline from branch "main" only if we use DO App Engine as "dev" server
